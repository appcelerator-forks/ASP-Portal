<Alloy>
    <View id="homepage">
  		<View class="wfill hfill vert">
		    <ScrollableView id="scrollableView" onScrollend="doScroll" bottom="60" scrollingEnabled="true">    	
		    	<View class="wfill hfill" id="discussion" backgroundColor='#eff3f6'>
		    		<View class="wfill" height="0" zIndex="9" id="bounceView" onClick="clickButtons" backgroundColor="#66000000"></View>
					<Widget src="To.BounceView" bottom="10" right="10" width="60" height="60" id="buttonsView" zIndex="10">
					    <View width="60" height="60" backgroundImage="/images/pop_more_logo.png" backgroundColor="#23c282" borderColor="#fff" borderRadius="30" right="0" bottom="0" zIndex="5" onClick="clickButtons" />
					    <View width="60" height="60" backgroundColor="yellow" borderColor="#fff" borderRadius="30" right="0" top="0" zIndex="3" />
					    <View width="60" height="60" backgroundColor="green" borderColor="#fff" borderRadius="30" left="0" top="0" zIndex="3" />
					    <View width="60" height="60" backgroundColor="red" onClick="doLogout" borderColor="#fff" borderRadius="30" left="0" bottom="0" zIndex="3" />
					</Widget>			    		
		    	</View>
		    	<View class="wfill hfill" id="notification">	    		
		    	</View>
		    	<View id="more" backgroundColor="#fff"></View>
	    	</ScrollableView>
    	</View>
    	<View class="wfill" height="60" backgroundColor="#fff" bottom="0" zIndex="1" id="bottomNavigation">
    		<View class="hfill" width="33%" onClick="scrollto" page="0" left="0" zIndex="2">
    			<ImageView class="wsize hsize" touchEnabled="false" image="/images/navigationButton/0_green.png"></ImageView>
    		</View>
    		<View class="wfill hfill" onClick="scrollto" page="1">
    			<ImageView class="wsize hsize" touchEnabled="false" image="/images/navigationButton/1_grey.png"></ImageView>
    		</View>
    		<View class="hfill" width="33%" onClick="scrollto" page="2" right="0">
    			<ImageView class="wsize hsize" touchEnabled="false" image='/images/navigationButton/2_grey.png'></ImageView>
    		</View>    		    		
    	</View> 
    </View>
</Alloy>
