<Alloy>
	<View class="wfill hfill" backgroundColor="#EFF1F4">
		<View class="wfill hfill padding20" backgroundColor="#fff">
			<ScrollView class="wfill hfill">
				<View class="vert wfill hsize" top="0">
					<View class="horz wfill hsize">
						<View class="wsize hsize padding">
							<ImageView width="80" height="80" image="/images/asp_square_logo.png"></ImageView>
						</View>
						<View class="vert hsize" width="60%">
							<View class="wfill hsize">
								<Label class="wsize hsize padding h4">Name</Label>
							</View>
							<View class="wfill hsize">
								<Picker class="group_picker wsize hsize" left="10">
									<PickerColumn>
										<PickerRow title="Group"></PickerRow>
										<PickerRow title="Group"></PickerRow>
										<PickerRow title="Group"></PickerRow>
										<PickerRow title="Group"></PickerRow>
										<PickerRow title="Group"></PickerRow>
									</PickerColumn>
								</Picker>
							</View>
						</View>
					</View>
					<View class="vert wfill hsize">
						<TextArea class="h4 wfill hsize small-padding" hintText="Type Something..." hintTextColor="gray" color="#000"></TextArea>
					</View>
				</View>
			</ScrollView>
			<View class="wfill" height="55" bottom="0" backgroundColor="#FAFAFA">
				<View class="horz wfill hfill" left="0" onClick="add_image">
					<ImageView class="wsize hfill padding" image="/images/blue_pin_logo.png"></ImageView>
					<Label class="wsize hsize h4">Add Some Image</Label>
				</View>
				<View class="wsize hfill" right="0">
					<ImageView class="wsize hfill padding" image="/images/blue_send_logo.png"></ImageView>
				</View>
			</View>
		</View>
	</View>
</Alloy>