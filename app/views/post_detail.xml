<Alloy>
	<View class="wfill hfill" backgroundColor="#fff">
		<ScrollView id="mother_view" class="hfill wfill contwfill conthsize vert" bottom="50" backgroundColor="#fff">
			<View class="wfill horz" height="75" top="0">
				<View class="wsize hsize padding">
					<ImageView height="55" width="55" image="/images/user.png"></ImageView>
				</View>
				<View class="wsize vert" height="55">
					<Label class="wsize hsize h4 bold" text="Name" left="0" id="user_name"></Label>
					<Label class="wsize hsize h5 grey" text="23 minutes ago" left="0" top="10" id="date_time"></Label>
				</View>
				<View class="wfill hsize padding" right="0" onClick="postOptions">
					<ImageView top="0" right="0" image="/images/btn-down.png"></ImageView>
				</View>
			</View>
			<View class="wfill hfill vert padding" top="0">
				<View class="wfill hsize padding" top="0" left="2" right="2">
					<Label class="wsize hsize h4 padding" text="" id="desc"></Label>
				</View>
				<ImageView class="wfill" left="2" right="2" image="/images/image_example.png" id="p_img"></ImageView>
			</View>
		</ScrollView>
		<View class="wfill vert" height="50" bottom="0" zIndex="99" backgroundColor="#fff">
			<View class="hr"></View>
			<View class="wfill hfill">
				<View class="wsize hsize" left="10">
					<Label class="wsize hsize h5" color="#90949C" text="? comments" id="count_coment"></Label>
				</View>
				<View class="wsize hsize horz" right="10">
					<ImageView image="/images/comment.png"></ImageView>
					<Label class="wsize hsize h4" color="#90949C" text="comment"></Label>
				</View>
			</View>
		</View>	
	</View>
</Alloy>